<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="1024" prefWidth="1440" style="-fx-background-color: linear-gradient(to right, #FFFFFF, #E4E4E4);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.questlog.ui.RegisterController">

    <center>
        <VBox alignment="CENTER" spacing="40">

            <Label styleClass="title-label" text="Welcome!">
                <font><Font name="JetBrains Mono ExtraBold" size="80.0" /></font>
            </Label>

            <Label styleClass="input-label" text="Create Account">
                <font><Font name="JetBrains Mono Regular" size="40.0" /></font>
            </Label>

            <VBox spacing="30.0">

                <!-- Username -->
                <VBox>
                    <Label styleClass="input-label" text="Username">
                        <VBox.margin>
                            <Insets left="300.0" right="300.0" />
                        </VBox.margin>
                        <font><Font name="JetBrains Mono Regular" size="30.0" /></font>
                    </Label>
                    <TextField fx:id="usernameField" prefWidth="350" styleClass="input-field">
                        <VBox.margin>
                            <Insets left="300.0" right="300.0" />
                        </VBox.margin>
                        <font><Font name="JetBrains Mono Regular" size="30.0" /></font>
                    </TextField>
                </VBox>

                <!-- Email -->
                <VBox>
                    <Label styleClass="input-label" text="Email">
                        <font><Font name="JetBrains Mono Regular" size="30.0" /></font>
                    </Label>
                    <TextField fx:id="emailField" prefWidth="350" styleClass="input-field">
                        <font><Font name="JetBrains Mono Regular" size="30.0" /></font>
                    </TextField>
                    <VBox.margin>
                        <Insets left="300.0" right="300.0" />
                    </VBox.margin>
                </VBox>

                <!-- Password -->
                <VBox>
                    <Label styleClass="input-label" text="Password">
                        <font><Font name="JetBrains Mono Regular" size="30.0" /></font>
                    </Label>
                    <PasswordField fx:id="passwordField" prefWidth="350" styleClass="input-field">
                        <font><Font name="JetBrains Mono Regular" size="30.0" /></font>
                    </PasswordField>
                    <VBox.margin>
                        <Insets left="300.0" right="300.0" />
                    </VBox.margin>
                </VBox>

                <!-- Confirm Password -->
                <VBox>
                    <Label styleClass="input-label" text="Confirm Password">
                        <font><Font name="JetBrains Mono Regular" size="30.0" /></font>
                    </Label>
                    <PasswordField fx:id="confirmPasswordField" prefWidth="350" styleClass="input-field">
                        <font><Font name="JetBrains Mono Regular" size="30.0" /></font>
                    </PasswordField>
                    <VBox.margin>
                        <Insets left="300.0" right="300.0" />
                    </VBox.margin>
                </VBox>
            <VBox.margin>
               <Insets />
            </VBox.margin>

            </VBox>

            <HBox alignment="CENTER" spacing="20">
                <Button onAction="#onBackClicked" prefHeight="60.0" prefWidth="190.0" text="Back">
               <font>
                  <Font name="JetBrains Mono Medium" size="30.0" />
               </font></Button>
                <Button onAction="#onRegisterClicked" prefHeight="60.0" prefWidth="190.0" text="Register">
               <font>
                  <Font name="JetBrains Mono Medium" size="30.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin></Button>
            </HBox>

            <Label fx:id="errorLabel" textFill="red" visible="false" />
        </VBox>
    </center>

</BorderPane>
