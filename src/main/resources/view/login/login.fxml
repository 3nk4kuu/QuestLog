<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1024.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.utsa.cs3443.questlog.ui.LoginController"
            style="-fx-background-color: linear-gradient(to bottom right, #f7f5f0, #e8e3d8);">

    <center>
        <VBox alignment="CENTER" spacing="30">
            <padding>
                <Insets top="60" bottom="40" />
            </padding>

            <!-- Title + Logo -->
            <HBox alignment="CENTER" spacing="12">

                <Label fx:id="loginTitle" text="QuestLog"/>

                <ImageView fx:id="loginLogo"
                           fitHeight="60"
                           preserveRatio="true"
                           opacity="0.95"/>
            </HBox>

            <!-- Error Label -->
            <Label fx:id="errorLabel"
                   alignment="CENTER"
                   prefHeight="15"
                   prefWidth="250"
                   text="Invalid username or password"
                   textAlignment="CENTER"
                   textFill="red"
                   visible="false" />

            <!-- Fields -->
            <VBox alignment="CENTER" spacing="25">
                <TextField fx:id="usernameField"
                           maxWidth="285"
                           promptText="Username">
                    <font><Font size="16" /></font>
                </TextField>

                <PasswordField fx:id="passwordField"
                               maxWidth="285"
                               promptText="Password">
                    <font><Font size="16" /></font>
                </PasswordField>
            </VBox>

            <!-- Login Button -->
            <Button onAction="#onLoginClicked"
                    prefWidth="285"
                    text="Login">
                <padding>
                    <Insets top="5" bottom="5" left="20" right="20"/>
                </padding>
                <font><Font size="16"/></font>
            </Button>

            <!-- Register link -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Need an Account?">
                    <font><Font size="14"/></font>
                </Label>

                <Hyperlink onAction="#onRegisterClicked"
                           text="Register">
                    <font><Font size="14"/></font>
                </Hyperlink>
            </HBox>

        </VBox>
    </center>

</BorderPane>

