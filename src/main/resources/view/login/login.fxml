<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.questlog.ui.LoginController">

    <center>
        <VBox alignment="CENTER">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>

            <Label fx:id="loginTitle" text="QuestLog"/>


            <Label fx:id="errorLabel" alignment="CENTER" prefHeight="15.0" prefWidth="250.0" text="Invalid username or password" textAlignment="CENTER" textFill="red" visible="false" />
         <VBox alignment="CENTER" prefHeight="101.0" prefWidth="944.0" spacing="25.0">
            <children>
      
                  <TextField fx:id="usernameField" maxWidth="285.0" promptText="Username">
                  <font>
                     <Font size="16.0" />
                  </font>
               </TextField>
                  <PasswordField fx:id="passwordField" maxWidth="285.0" promptText="Password">
                  <font>
                     <Font size="16.0" />
                  </font>
               </PasswordField>
            </children>
         </VBox>
             <Button onAction="#onLoginClicked" prefWidth="285.0" text="Login">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
            <padding>
               <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
            </padding>
            <font>
               <Font size="16.0" />
            </font>
         </Button>
         <HBox alignment="CENTER" prefHeight="28.0" prefWidth="250.0">
            <children>
               <Label text="Need an Account?">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
               <Hyperlink onAction="#onRegisterClicked" text="Register">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Hyperlink>
            </children>
            <VBox.margin>
               <Insets bottom="5.0" top="10.0" />
            </VBox.margin>
         </HBox>
        </VBox>
    </center>

</BorderPane>
