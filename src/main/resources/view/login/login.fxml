<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="edu.utsa.cs3443.questlog.ui.LoginController"
           styleClass="login-background">

    <!-- LOGIN CARD -->
    <VBox alignment="CENTER"
          spacing="25"
          maxWidth="500"
          styleClass="login-card">

        <!-- SMALL IMPROVEMENT: More top spacing -->
        <padding>
            <Insets top="100" bottom="40" left="35" right="35"/>
        </padding>

        <!-- Title + Logo -->
        <HBox alignment="CENTER"
              spacing="12"
              maxWidth="Infinity">

            <!-- SMALL IMPROVEMENT: Give a little breathing room -->
            <padding>
                <Insets bottom="10"/>
            </padding>

            <Label fx:id="loginTitle"
                   text="QuestLog"
                   maxWidth="Infinity"
                   styleClass="login-title"/>

            <ImageView fx:id="loginLogo"
                       fitHeight="55"
                       preserveRatio="true"/>
        </HBox>

        <!-- Error Label -->
        <Label fx:id="errorLabel"
               text="Invalid username or password"
               visible="false"
               styleClass="error-label"
               textAlignment="CENTER"/>

        <!-- Username -->
        <TextField fx:id="usernameField"
                   promptText="Username"
                   maxWidth="260"
                   style="-fx-padding: 8;">
            <font><Font size="16"/></font>
        </TextField>

        <!-- Password -->
        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       maxWidth="260"
                       style="-fx-padding: 8;">
            <font><Font size="16"/></font>
        </PasswordField>

        <!-- Login Button -->
        <Button text="Login"
                prefWidth="260"
                onAction="#onLoginClicked"
                styleClass="login-button"
                style="-fx-background-radius: 10;">
            <font><Font size="16"/></font>
        </Button>

        <!-- Register Link -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Need an account?" />
            <Hyperlink text="Register" onAction="#onRegisterClicked"/>
        </HBox>

    </VBox>

</StackPane>
