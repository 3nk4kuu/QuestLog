<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.utsa.cs3443.questlog.ui.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="16.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <Label text="QuestLog" styleClass="logo-title"/>

            <TextField fx:id="emailField" promptText="Email"/>
            <PasswordField fx:id="passwordField" promptText="Password"/>

            <Button text="Log In" onAction="#onLoginClicked" maxWidth="200"/>

            <Hyperlink text="Create Account" onAction="#onCreateAccountClicked"/>

            <Label fx:id="errorLabel" textFill="red" visible="false"/>
        </VBox>
    </children>
</AnchorPane>
