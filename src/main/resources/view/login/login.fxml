<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.utsa.cs3443.questlog.ui.LoginController"
            prefWidth="600" prefHeight="400">

    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <Label text="QuestLog" styleClass="screen-title"/>

            <TextField fx:id="usernameField" promptText="Username" maxWidth="250"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>

            <Label fx:id="errorLabel"
                   text="Invalid username or password"
                   textFill="red"
                   visible="false"/>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Login" onAction="#onLoginClicked"/>
                <Button text="Create Account" onAction="#onRegisterClicked"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
