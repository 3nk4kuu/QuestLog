<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.questlog.ui.LoginController">
   <VBox alignment="CENTER">
      <children>
      
           <!-- Title + Logo -->
           <HBox alignment="CENTER" prefWidth="260.0">
               <Region HBox.hgrow="ALWAYS" />

               <Label fx:id="loginTitle" styleClass="login-title" text="QuestLog" />

               <ImageView fx:id="loginLogo" fitHeight="145.0" fitWidth="145.0" preserveRatio="true">
               <image>
                  <Image url="@../../data/images/logo.png" />
               </image>
            </ImageView>
               <Region HBox.hgrow="ALWAYS" />
           </HBox>
      
              <!-- Error Label -->
           <Label fx:id="errorLabel" styleClass="error-label" text="Invalid username or password" textAlignment="CENTER" visible="false">
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
         </Label>

          <!-- LOGIN CARD -->
          <VBox alignment="CENTER" spacing="25.0">
      
              <!-- Username -->
              <TextField fx:id="usernameField" maxWidth="260" promptText="Username" style="-fx-padding: 8;">
                  <font>
                  <Font size="16" />
               </font>
              </TextField>
      
              <!-- Password -->
              <PasswordField fx:id="passwordField" maxWidth="260" promptText="Password" style="-fx-padding: 8;">
                  <font>
                  <Font size="16" />
               </font>
              </PasswordField>
      
              <!-- Login Button -->
              <Button onAction="#onLoginClicked" prefWidth="260" style="-fx-background-radius: 10;" styleClass="login-button" text="Login">
                  <font>
                  <Font size="16" />
               </font>
              </Button>
      
          </VBox>
   
           <!-- Register Link -->
           <HBox alignment="CENTER" spacing="5">
               <Label text="Need an account?" />
               <Hyperlink onAction="#onRegisterClicked" styleClass="hyperlink" text="Register" />
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
           </HBox>
      </children>
   </VBox>

</StackPane>
