<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="root" styleClass="game-card" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.questlog.ui.GameCardController">

    <VBox alignment="TOP_CENTER" spacing="6">
        <ImageView fx:id="coverImageView" fitHeight="200.0" fitWidth="150.0" />
      <VBox alignment="CENTER" prefHeight="66.0" prefWidth="150.0">
         <children>

              <Label fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" text="Game Title" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>

              <HBox alignment="CENTER" spacing="2.0">
                  <Label fx:id="heart1" text="♡">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
                  <Label fx:id="heart2" text="♡">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
                  <Label fx:id="heart3" text="♡">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
                  <Label fx:id="heart4" text="♡">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
                  <Label fx:id="heart5" alignment="CENTER" contentDisplay="CENTER" text="♡">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
              </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="23.0" prefWidth="150.0" spacing="5.0">
               <children>

                    <Label fx:id="platformLabel" alignment="CENTER_RIGHT" styleClass="platform-label" text="Platform">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Separator maxHeight="18.0" orientation="VERTICAL" />

                    <Label fx:id="statusLabel" styleClass="status-label" text="Playing">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
    </VBox>

</StackPane>
