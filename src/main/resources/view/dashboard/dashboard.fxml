<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.utsa.cs3443.questlog.ui.DashboardController"
            prefWidth="1440" prefHeight="900">

    <!-- Top: greeting + filter/sort bar -->
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="24" bottom="10" left="24"/>
            </padding>

            <!-- Row 1: greeting + logout -->
            <HBox alignment="CENTER_LEFT">
                <Label fx:id="welcomeLabel"
                       text="Welcome back, User00"
                       styleClass="screen-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout"
                        onAction="#onLogoutClicked"
                        styleClass="login-button"/>
            </HBox>

            <!-- Row 2: filters + sort + add entry -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <Label text="Sort:"
                       styleClass="input-label"/>
                <ComboBox fx:id="sortCombo"
                          prefWidth="160"
                          styleClass="input-field"/>

                <Label text="Platform:"
                       styleClass="input-label"/>
                <ComboBox fx:id="platformFilterCombo"
                          prefWidth="160"
                          styleClass="input-field"/>

                <Label text="Status:"
                       styleClass="input-label"/>
                <ComboBox fx:id="statusFilterCombo"
                          prefWidth="160"
                          styleClass="input-field"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Add Entry"
                        onAction="#onAddEntryClicked"
                        prefWidth="160"
                        styleClass="login-button"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center: grid of game cards -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <FlowPane fx:id="gamesFlowPane"
                          hgap="16" vgap="16">
                    <padding>
                        <Insets top="16" right="24" bottom="24" left="24"/>
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </center>

    <!-- Bottom: toolbar (Library / Stats / Settings) -->
    <bottom>
        <fx:include source="../components/toolbar.fxml"/>
    </bottom>

</BorderPane>
