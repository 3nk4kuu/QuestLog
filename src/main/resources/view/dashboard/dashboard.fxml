<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="1024" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.questlog.ui.DashboardController">

    <!-- ================= TOP: greeting + sort/filter + add + logout ================= -->
    <top>
        <VBox spacing="8">
            <padding>
                <!-- increased bottom padding to prevent Add Entry from touching divider -->
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>

            <!-- greeting + logout -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="welcomeLabel" styleClass="screen-title" text="Welcome back, User00">
                    <font><Font size="30" /></font>
                </Label>

                <!-- Flexible spacer pushes logout button to far right -->
                <Region HBox.hgrow="ALWAYS" />

                <Button alignment="TOP_RIGHT" onAction="#onLogoutClicked" styleClass="login-button" text="Logout">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
                </Button>
            </HBox>

            <!-- filter + sort + Add Entry button -->
            <HBox alignment="CENTER_LEFT" spacing="12">
                <Label text="Sort:"><font><Font size="16" /></font></Label>
                <ComboBox fx:id="sortCombo" prefWidth="150" />

                <Label text="Platform:"><font><Font size="16" /></font></Label>
                <ComboBox fx:id="platformFilterCombo" prefWidth="150" />

                <Label text="Status:"><font><Font size="16" /></font></Label>
                <ComboBox fx:id="statusFilterCombo" prefWidth="150" />

                <Region HBox.hgrow="ALWAYS" />

                <Button alignment="CENTER" onAction="#onAddEntryClicked" prefHeight="25.0" text="Add Entry">
               <font>
                  <Font size="14.0" />
               </font>
                </Button>
            </HBox>
        </VBox>
    </top>

    <!-- ================= CENTER: game cards ================= -->
    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <FlowPane fx:id="gamesFlowPane" hgap="10" vgap="10">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </center>

    <!-- ================= BOTTOM: toolbar ================= -->
    <bottom>
        <fx:include source="../components/toolbar.fxml" />
    </bottom>

</BorderPane>
