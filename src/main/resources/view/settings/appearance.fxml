<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.utsa.cs3443.questlog.ui.AppearanceController"
      alignment="CENTER"
      prefHeight="600"
      prefWidth="800">

    <!-- Top bar -->
    <VBox spacing="10" alignment="CENTER">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button onAction="#onBackClicked" text="Back" />
        </HBox>

        <Label text="Appearance" styleClass="screen-title" alignment="CENTER">
            <font><Font size="30"/></font>
        </Label>
    </VBox>

    <!-- Theme Section -->
    <VBox spacing="15" alignment="CENTER">

        <HBox spacing="20" alignment="CENTER">
            <Label text="Theme:" styleClass="input-label">
                <font><Font size="36"/></font>
            </Label>

            <ToggleButton fx:id="darkModeToggle"
                          onAction="#onDarkModeToggled"
                          text="Dark Mode: Off">
                <font><Font size="18"/></font>
            </ToggleButton>
        </HBox>

        <Label text="Toggle Dark Mode to switch between light and dark themes across the entire Appearance screen."
               wrapText="true"
               maxWidth="1000"
               styleClass="input-label"
               alignment="CENTER">
            <font><Font size="16"/></font>
        </Label>

    </VBox>

    <!-- Bottom-right aligned icon -->
    <HBox alignment="BOTTOM_RIGHT"
          prefWidth="99999"
          prefHeight="99999">
        <ImageView fx:id="themeIcon"
                   fitHeight="80"
                   fitWidth="80"
                   preserveRatio="true"
                   style="-fx-padding: 20;"/>
    </HBox>

</VBox>

