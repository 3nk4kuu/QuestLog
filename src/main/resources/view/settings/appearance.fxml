<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="12.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.questlog.ui.AppearanceController">
   <HBox alignment="CENTER" spacing="10">
      <children>
         <Button onAction="#onBackClicked" text="Back" />
         <Region HBox.hgrow="ALWAYS" />
         <Label alignment="CENTER" styleClass="screen-title" text="Appearance">
            <font>
               <Font size="32.0" />
            </font>
         </Label>
         <Region HBox.hgrow="ALWAYS" />
         <HBox prefWidth="75" />
      </children>
   </HBox>
   <Separator />

    <!-- Theme Section -->
    <VBox alignment="CENTER" spacing="15">

        <HBox alignment="CENTER" spacing="20">
            <Label styleClass="subtitle-label" text="Theme:">
                <font><Font size="30.0" /></font>
            </Label>

            <ToggleButton fx:id="darkModeToggle" onAction="#onDarkModeToggled" text="Dark Mode: Off">
                <font><Font size="18" /></font>
            </ToggleButton>
        </HBox>

        <Label alignment="CENTER" maxWidth="1000" styleClass="input-label" text="Toggle Dark Mode to switch between light and dark themes across the entire Appearance screen." wrapText="true">
            <font><Font size="16" /></font>
        </Label>

    </VBox>

    <!-- Bottom-right aligned icon -->
    <HBox alignment="BOTTOM_RIGHT">
        <ImageView fx:id="themeIcon" fitHeight="80" fitWidth="80" preserveRatio="true" style="-fx-padding: 20;" />
    </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>

</VBox>
