<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Separator?>

<VBox spacing="12" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.questlog.ui.AppearanceController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <HBox alignment="CENTER" spacing="10">
        <HBox>
            <Button onAction="#onBackClicked" text="Back"/>
        </HBox>

        <Region HBox.hgrow="ALWAYS"/>

        <Label text="Appearance" styleClass="screen-title" alignment="CENTER">
            <font><Font size="30"/></font>
        </Label>

        <Region HBox.hgrow="ALWAYS"/>

        <HBox prefWidth="80"/>
    </HBox>

    <Separator />

    <!-- Content Section -->
    <VBox alignment="TOP_CENTER" spacing="12">
        <Label styleClass="screen-title" text="Theme">
            <font><Font size="20" /></font>
            <VBox.margin><Insets left="20" right="20" /></VBox.margin>
        </Label>

        <ToggleButton fx:id="darkModeToggle" onAction="#onDarkModeToggled" text="Dark Mode: Off">
            <font><Font size="14" /></font>
            <VBox.margin><Insets left="20" right="20" /></VBox.margin>
        </ToggleButton>

        <Label alignment="CENTER" styleClass="input-label" text="Toggle Dark Mode to switch between light and dark themes across the app." wrapText="true">
            <font><Font size="14" /></font>
            <VBox.margin><Insets left="20" right="20" /></VBox.margin>
        </Label>
    </VBox>

</VBox>
