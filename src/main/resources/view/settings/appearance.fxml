<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.utsa.cs3443.questlog.ui.AppearanceController"
      spacing="12">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10">
        <Button text="Back" onAction="#onBackClicked"/>
        <Label text="Appearance" styleClass="screen-title"/>
    </HBox>

    <Separator/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Dark Mode"/>
        <CheckBox fx:id="darkModeCheckBox" onAction="#onDarkModeToggled"/>
    </HBox>

</VBox>
