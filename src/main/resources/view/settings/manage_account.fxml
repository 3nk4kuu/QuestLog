<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.utsa.cs3443.questlog.ui.ManageAccountController"
      spacing="12">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10">
        <Button text="Back" onAction="#onBackClicked"/>
        <Label text="Manage Account" styleClass="screen-title"/>
    </HBox>

    <Separator/>

    <Label text="Change Email"/>
    <TextField fx:id="emailField" promptText="New email"/>
    <Button text="Save Email" onAction="#onSaveEmailClicked"/>

    <Label text="Change Password"/>
    <PasswordField fx:id="passwordField" promptText="New password"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm password"/>
    <Button text="Save Password" onAction="#onSavePasswordClicked"/>

    <Separator/>

    <Button text="Delete Account"
            styleClass="danger-button"
            onAction="#onDeleteAccountClicked"/>

    <Label fx:id="messageLabel" textFill="red"/>

</VBox>
