<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="12" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.questlog.ui.ManageAccountController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#onBackClicked" text="Back"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Label text="Manage Account" styleClass="screen-title" alignment="CENTER">
            <font><Font size="30"/></font>
        </Label>

        <Region HBox.hgrow="ALWAYS"/>

        <HBox prefWidth="75"/>
    </HBox>


    <Separator />

    <Label text="Change Email">
      <font>
         <Font size="20.0" />
      </font>
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin></Label>
    <TextField fx:id="emailField" promptText="New email">
      <font>
         <Font size="14.0" />
      </font>
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin></TextField>
   <HBox alignment="CENTER_RIGHT">
      <children>
          <Button onAction="#onSaveEmailClicked" text="Save Email">
            <font>
               <Font size="14.0" />
            </font>
         </Button>
      </children>
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin>
   </HBox>

    <Label text="Change Password">
      <font>
         <Font size="20.0" />
      </font>
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin></Label>
    <PasswordField fx:id="passwordField" promptText="New password">
      <font>
         <Font size="14.0" />
      </font>
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin></PasswordField>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm password">
      <font>
         <Font size="14.0" />
      </font>
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin></PasswordField>
   <HBox alignment="CENTER_RIGHT">
      <children>
          <Button onAction="#onSavePasswordClicked" text="Save Password">
            <font>
               <Font size="14.0" />
            </font>
         </Button>
      </children>
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin>
   </HBox>

    <Separator />
   <HBox alignment="TOP_RIGHT">
      <children>
      
          <Button alignment="CENTER" onAction="#onDeleteAccountClicked" styleClass="danger-button" text="Delete Account" textFill="#e60073">
            <font>
               <Font size="14.0" />
            </font>
         </Button>
      </children>
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin>
   </HBox>

    <Label fx:id="messageLabel" textFill="red" />

</VBox>
