<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="1024" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.questlog.ui.SettingsMenuController">

    <!-- ================= TOP ================= -->
    <top>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <padding><Insets bottom="10" /></padding>

            <Label alignment="CENTER" styleClass="screen-title" text="Settings">
                <font><Font size="30" /></font>
            </Label>
            <Separator>
            <VBox.margin>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </VBox.margin></Separator>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
        </VBox>
    </top>

    <!-- ================= CENTER CONTENT ================= -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="12" BorderPane.alignment="CENTER">
            <Button maxWidth="Infinity" onAction="#onAccountClicked" text="Account">
                <font><Font size="14" /></font>
            </Button>

            <Button maxWidth="Infinity" onAction="#onAppearanceClicked" text="Appearance">
                <font><Font size="14" /></font>
            </Button>

            <Button maxWidth="Infinity" onAction="#onCreditsClicked" text="Credits">
                <font><Font size="14" /></font>
            </Button>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </BorderPane.margin>
        </VBox>
    </center>

    <!-- ================= BOTTOM TOOLBAR ================= -->
    <bottom>
        <fx:include source="../components/toolbar.fxml" />
    </bottom>

</BorderPane>
