        <Button onAction="#onBackClicked" text="Back" />

        <Region HBox.hgrow="ALWAYS" />

        <Label alignment="CENTER" styleClass="screen-title" text="Credits">
            <font><Font size="32.0" /></font>
        </Label>

        <Region HBox.hgrow="ALWAYS" />
        <Region prefWidth="60" />
