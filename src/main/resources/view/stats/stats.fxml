<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.utsa.cs3443.questlog.ui.StatsController"
            prefWidth="900" prefHeight="550">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Stats" styleClass="screen-title"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="20" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="8">
                <Label text="Total Games:"/>
                <Label fx:id="totalGamesLabel" text="0"/>
            </HBox>

            <HBox spacing="8">
                <Label text="Completed:"/>
                <Label fx:id="completedLabel" text="0"/>
            </HBox>

            <HBox spacing="8">
                <Label text="Playing:"/>
                <Label fx:id="playingLabel" text="0"/>
            </HBox>

            <HBox spacing="8">
                <Label text="Backlog:"/>
                <Label fx:id="backlogLabel" text="0"/>
            </HBox>

        </VBox>
    </center>

    <bottom>
        <fx:include source="../components/toolbar.fxml"/>
    </bottom>

</BorderPane>
