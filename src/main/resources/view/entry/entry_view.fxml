<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.questlog.ui.EntryViewController">

    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">

            <Button alignment="CENTER" onAction="#onBackClicked" styleClass="login-button" text="Back">
                <font><Font size="16.0" /></font>
            </Button>

            <Region HBox.hgrow="ALWAYS" />

            <Button onAction="#onEditClicked" styleClass="login-button" text="Edit">
                <font><Font size="16.0" /></font>
            </Button>
         <BorderPane.margin>
            <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
         </BorderPane.margin>
        </HBox>
    </top>


    <left>
        <VBox alignment="TOP_CENTER" prefHeight="505.0" prefWidth="340.0" spacing="20.0">

            <ImageView fx:id="coverImageView" fitHeight="320.0" fitWidth="240.0" preserveRatio="true">
            <VBox.margin>
               <Insets left="50.0" right="50.0" />
            </VBox.margin></ImageView>

            <!-- Rating Hearts Component -->
            <VBox alignment="CENTER">
                <fx:include source="../components/rating_hearts.fxml" />
            </VBox>

        </VBox>
    </left>


    <center>
        <VBox spacing="5.0">

            <HBox alignment="BASELINE_LEFT" spacing="10.0">
                <Label fx:id="titleLabel" styleClass="title-label" text="Game Title">
                    <font><Font size="40.0" /></font>
                </Label>
                <Label alignment="CENTER" text="Release Date" textFill="#808080">
                    <font><Font size="25.0" /></font>
                </Label>
            </HBox>

            <!-- FIRST ROW -->
            <HBox alignment="CENTER_LEFT" prefWidth="1200" spacing="20.0">
                <VBox spacing="5.0">
                    <Label text="Status">
                        <font><Font size="16.0" /></font>
                    </Label>
                    <TextField editable="false" HBox.hgrow="ALWAYS">
                  <VBox.margin>
                     <Insets right="50.0" />
                  </VBox.margin>
                  <font>
                     <Font size="16.0" />
                  </font></TextField>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Platform">
                        <font><Font size="16.0" /></font>
                    </Label>
                    <TextField editable="false" HBox.hgrow="ALWAYS">
                  <VBox.margin>
                     <Insets right="50.0" />
                  </VBox.margin>
                  <font>
                     <Font size="16.0" />
                  </font></TextField>
                </VBox>
            </HBox>

            <!-- SECOND ROW -->
            <HBox alignment="CENTER_LEFT" prefWidth="1200" spacing="20.0">
                <VBox spacing="5.0">
                    <Label text="Started">
                        <font><Font size="16.0" /></font>
                    </Label>
                    <TextField editable="false" HBox.hgrow="ALWAYS">
                  <VBox.margin>
                     <Insets right="50.0" />
                  </VBox.margin>
                  <font>
                     <Font size="16.0" />
                  </font></TextField>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Completed">
                        <font><Font size="16.0" /></font>
                    </Label>
                    <TextField editable="false" HBox.hgrow="ALWAYS">
                  <VBox.margin>
                     <Insets right="50.0" />
                  </VBox.margin>
                  <font>
                     <Font size="16.0" />
                  </font></TextField>
                </VBox>
            </HBox>

            <!-- NOTES -->
            <VBox spacing="5.0">
                <Label styleClass="input-label" text="Notes:">
                    <font><Font size="16.0" /></font>
                </Label>

                <TextArea fx:id="notesArea" editable="false" prefHeight="222.0" prefWidth="582.0" promptText="Nothing here..." styleClass="input-field" wrapText="true">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font size="16.0" />
               </font></TextArea>
            <padding>
               <Insets bottom="30.0" />
            </padding>
            <VBox.margin>
               <Insets right="50.0" />
            </VBox.margin>
            </VBox>
         <BorderPane.margin>
            <Insets bottom="20.0" right="50.0" />
         </BorderPane.margin>

        </VBox>
    </center>

</BorderPane>
