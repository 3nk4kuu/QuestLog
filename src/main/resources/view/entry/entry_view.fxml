<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.questlog.ui.EntryViewController">

    <!-- Top: Back / Edit -->
    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Button onAction="#onBackClicked" styleClass="login-button" text="Back">
                <font><Font size="16" /></font>
            </Button>

            <!-- Spacer to push Edit to the right -->
            <Region HBox.hgrow="ALWAYS" />

            <Button onAction="#onEditClicked" styleClass="login-button" text="Edit">
                <font><Font size="16" /></font>
            </Button>
        </HBox>
    </top>


    <left>
        <VBox alignment="TOP_CENTER" prefHeight="505.0" prefWidth="340.0" spacing="20.0">

            <ImageView fx:id="coverImageView" fitHeight="320.0" fitWidth="240.0" preserveRatio="true">
            <VBox.margin>
               <Insets left="50.0" right="50.0" />
            </VBox.margin></ImageView>

            <!-- Rating Hearts Component -->
            <VBox alignment="CENTER">
                <fx:include fx:id="ratingHearts" source="../components/rating_hearts.fxml"/>
            </VBox>
         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding>

        </VBox>
    </left>


    <center>
        <VBox spacing="5.0">

            <HBox alignment="BASELINE_LEFT" spacing="10.0">
                <Label fx:id="titleLabel" styleClass="title-label" text="Game Title">
                    <font><Font size="40.0" /></font>
                </Label>
                <Label fx:id="metaLabel" alignment="CENTER" styleClass="year-Label" text="Release Date" textFill="#808080">
                    <font><Font size="25.0" /></font>
                </Label>
            </HBox>

            <!-- FIRST ROW -->
            <HBox alignment="CENTER_LEFT" prefWidth="1200" spacing="20.0">
                <VBox spacing="5.0">
                    <Label text="Status">
                        <font><Font size="16.0" /></font>
                    </Label>
                    <TextField fx:id="statusField" editable="false" HBox.hgrow="ALWAYS">
                  <VBox.margin>
                     <Insets right="50.0" />
                  </VBox.margin>
                  <font>
                     <Font size="16.0" />
                  </font></TextField>
                </VBox>

                <VBox spacing="5.0">
                    <Label fx:id="platform" text="Platform">
                        <font><Font size="16.0" /></font>
                    </Label>
                    <TextField fx:id="platformField" editable="false" HBox.hgrow="ALWAYS">
                  <VBox.margin>
                     <Insets right="50.0" />
                  </VBox.margin>
                  <font>
                     <Font size="16.0" />
                  </font></TextField>
                </VBox>
            </HBox>

            <!-- SECOND ROW -->
            <HBox alignment="CENTER_LEFT" prefWidth="1200" spacing="20.0">
                <VBox spacing="5.0">
                    <Label text="Started">
                        <font><Font size="16.0" /></font>
                    </Label>
                    <TextField fx:id="startField" editable="false" HBox.hgrow="ALWAYS">
                  <VBox.margin>
                     <Insets right="50.0" />
                  </VBox.margin>
                  <font>
                     <Font size="16.0" />
                  </font></TextField>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Completed">
                        <font><Font size="16.0" /></font>
                    </Label>
                    <TextField fx:id="completedField" editable="false" HBox.hgrow="ALWAYS">
                  <VBox.margin>
                     <Insets right="50.0" />
                  </VBox.margin>
                  <font>
                     <Font size="16.0" />
                  </font></TextField>
                </VBox>
            </HBox>

            <!-- NOTES -->
            <VBox spacing="5.0">
                <Label styleClass="input-label" text="Notes:">
                    <font><Font size="16.0" /></font>
                </Label>

                <TextArea fx:id="notesArea" editable="false" prefHeight="222.0" prefWidth="582.0" promptText="Nothing here..." styleClass="input-field" wrapText="true">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font size="16.0" />
               </font></TextArea>
            <padding>
               <Insets bottom="30.0" />
            </padding>
            <VBox.margin>
               <Insets right="50.0" />
            </VBox.margin>
            </VBox>
         <BorderPane.margin>
            <Insets bottom="20.0" right="50.0" />
         </BorderPane.margin>

        </VBox>
    </center>

</BorderPane>
