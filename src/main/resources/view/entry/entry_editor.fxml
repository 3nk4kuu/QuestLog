<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.questlog.ui.EntryEditorController">

    <!-- Top: Back / Title / Save -->
    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">

            <Button onAction="#onBackClicked" styleClass="login-button" text="Back">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
         <Region prefHeight="35.0" prefWidth="813.0" />

            <Button onAction="#onSaveClicked" styleClass="login-button" text="Save">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
         <BorderPane.margin>
            <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
         </BorderPane.margin>
        </HBox>
    </top>

    <!-- Left: cover + change button + rating hearts -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="505.0" prefWidth="340.0" spacing="20.0">

            <ImageView fx:id="coverImageView" fitHeight="320.0" fitWidth="240.0" preserveRatio="true">
            <VBox.margin>
               <Insets left="50.0" right="50.0" />
            </VBox.margin></ImageView>

            <Button onAction="#onChangeCoverClicked" styleClass="login-button" text="Change Cover…">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>

                  <!-- Hearts directly declared here, hooked to onHeartClicked -->
            <HBox alignment="CENTER" spacing="5.0">
                <ToggleButton fx:id="eHeart1" onAction="#onHeartClicked" text="♡">
               <font>
                  <Font size="16.0" />
               </font>
            </ToggleButton>
                <ToggleButton fx:id="eHeart2" onAction="#onHeartClicked" text="♡">
               <font>
                  <Font size="16.0" />
               </font>
            </ToggleButton>
                <ToggleButton fx:id="eHeart3" onAction="#onHeartClicked" text="♡">
               <font>
                  <Font size="16.0" />
               </font>
            </ToggleButton>
                <ToggleButton fx:id="eHeart4" onAction="#onHeartClicked" text="♡">
               <font>
                  <Font size="16.0" />
               </font>
            </ToggleButton>
                <ToggleButton fx:id="eHeart5" onAction="#onHeartClicked" text="♡">
               <font>
                  <Font size="16.0" />
               </font>
            </ToggleButton>
            </HBox>
        </VBox>
    </left>

    <!-- Center: form fields + error label -->
    <center>
        <GridPane hgap="20.0" vgap="15.0">

            <columnConstraints>
                <ColumnConstraints percentWidth="25.0" />
                <ColumnConstraints percentWidth="70.0" />
            </columnConstraints>

            <!-- Title -->
            <Label styleClass="input-label" text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <TextField fx:id="titleField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <font>
               <Font size="16.0" />
            </font></TextField>

            <!-- Platform -->
            <Label styleClass="input-label" text="Platform:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <ComboBox fx:id="platformCombo" prefHeight="35.0" prefWidth="174.0" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <!-- Status -->
            <Label styleClass="input-label" text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <ComboBox fx:id="statusCombo" prefHeight="35.0" prefWidth="174.0" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <!-- Started -->
            <Label styleClass="input-label" text="Started:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <DatePicker fx:id="startDatePicker" prefHeight="35.0" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <!-- Completed -->
            <Label styleClass="input-label" text="Completed:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <DatePicker fx:id="completionDatePicker" prefHeight="35.0" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <!-- Notes -->
            <Label styleClass="input-label" text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.valignment="TOP">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <TextArea fx:id="notesArea" prefHeight="208.0" prefWidth="417.0" promptText="Nothing here..." styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <font>
               <Font size="16.0" />
            </font></TextArea>

            <!-- Error label -->
            <Label fx:id="errorLabel" text="Error message" textFill="red" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="6" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
         <BorderPane.margin>
            <Insets right="50.0" />
         </BorderPane.margin>
        </GridPane>
    </center>

</BorderPane>
