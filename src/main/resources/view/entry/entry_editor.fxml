<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.utsa.cs3443.questlog.ui.EntryEditorController"
            prefWidth="1024.0" prefHeight="768.0">

    <!-- ========================= TOP BAR ========================= -->
    <top>
        <HBox alignment="CENTER" spacing="80" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="15" bottom="15" left="15" right="15"/>
            </padding>

            <!-- Left: Back + Delete -->
            <HBox spacing="10">
                <Button text="Back"
                        onAction="#onBackClicked"
                        prefWidth="90" prefHeight="36"
                        styleClass="login-button">
                    <font><Font name="JetBrains Mono Medium" size="18"/></font>
                </Button>

                <Button fx:id="deleteButton"
                        text="Delete"
                        onAction="#onDeleteClicked"
                        prefWidth="90" prefHeight="36"
                        styleClass="login-button">
                    <font><Font name="JetBrains Mono Medium" size="18"/></font>
                </Button>
            </HBox>

            <!-- Center: title -->
            <Label fx:id="headerLabel"
                   text="Create Entry"
                   styleClass="title-label">
                <font><Font name="JetBrains Mono ExtraBold" size="24"/></font>
            </Label>

            <!-- Right: Save + Logout -->
            <HBox spacing="10">
                <Button text="Save"
                        onAction="#onSaveClicked"
                        prefWidth="90" prefHeight="36"
                        styleClass="login-button">
                    <font><Font name="JetBrains Mono Medium" size="18"/></font>
                </Button>

                <Button text="Logout"
                        onAction="#onLogoutClicked"
                        prefWidth="90" prefHeight="36"
                        styleClass="login-button">
                    <font><Font name="JetBrains Mono Medium" size="18"/></font>
                </Button>
            </HBox>
        </HBox>
    </top>

    <!-- ========================= LEFT COLUMN: COVER + RATING ========================= -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="12"
              prefWidth="360">
            <padding>
                <Insets top="20" bottom="20" left="30" right="20"/>
            </padding>

            <!-- Cover image (shrunk so hearts fit below) -->
            <ImageView fx:id="coverImageView"
                       fitWidth="320" fitHeight="340"
                       preserveRatio="true"/>

            <Button text="Change Cover..."
                    onAction="#onChangeCoverClicked"
                    prefWidth="220" prefHeight="40"
                    styleClass="login-button">
                <font><Font name="JetBrains Mono Medium" size="18"/></font>
            </Button>

            <!-- Rating hearts (inline so they bind to eHeart* fields) -->
            <HBox alignment="CENTER" spacing="6">
                <ToggleButton fx:id="eHeart1"
                              text="♡"
                              onAction="#onHeartClicked"
                              prefWidth="32" prefHeight="32"/>
                <ToggleButton fx:id="eHeart2"
                              text="♡"
                              onAction="#onHeartClicked"
                              prefWidth="32" prefHeight="32"/>
                <ToggleButton fx:id="eHeart3"
                              text="♡"
                              onAction="#onHeartClicked"
                              prefWidth="32" prefHeight="32"/>
                <ToggleButton fx:id="eHeart4"
                              text="♡"
                              onAction="#onHeartClicked"
                              prefWidth="32" prefHeight="32"/>
                <ToggleButton fx:id="eHeart5"
                              text="♡"
                              onAction="#onHeartClicked"
                              prefWidth="32" prefHeight="32"/>
            </HBox>
        </VBox>
    </left>

    <!-- ========================= RIGHT COLUMN: FORM ========================= -->
    <center>
        <GridPane hgap="18" vgap="14">
            <padding>
                <Insets top="30" bottom="20" left="10" right="30"/>
            </padding>

            <!-- make label column wide enough to show full words -->
            <columnConstraints>
                <ColumnConstraints prefWidth="140" minWidth="130"/>
                <ColumnConstraints prefWidth="400" hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Title -->
            <Label text="Title:"
                   styleClass="input-label"
                   GridPane.rowIndex="0" GridPane.columnIndex="0">
                <font><Font name="JetBrains Mono Regular" size="20"/></font>
            </Label>
            <TextField fx:id="titleField"
                       styleClass="input-field"
                       prefWidth="350" prefHeight="32"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Platform -->
            <Label text="Platform:"
                   styleClass="input-label"
                   GridPane.rowIndex="1" GridPane.columnIndex="0">
                <font><Font name="JetBrains Mono Regular" size="20"/></font>
            </Label>
            <ComboBox fx:id="platformCombo"
                      styleClass="input-field"
                      prefHeight="32"
                      GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Status -->
            <Label text="Status:"
                   styleClass="input-label"
                   GridPane.rowIndex="2" GridPane.columnIndex="0">
                <font><Font name="JetBrains Mono Regular" size="20"/></font>
            </Label>
            <ComboBox fx:id="statusCombo"
                      styleClass="input-field"
                      prefHeight="32"
                      GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Start date -->
            <Label text="Started:"
                   styleClass="input-label"
                   GridPane.rowIndex="3" GridPane.columnIndex="0">
                <font><Font name="JetBrains Mono Regular" size="20"/></font>
            </Label>
            <DatePicker fx:id="startDatePicker"
                        styleClass="input-field"
                        prefHeight="32"
                        GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- Completion date -->
            <Label text="Completed:"
                   styleClass="input-label"
                   GridPane.rowIndex="4" GridPane.columnIndex="0">
                <font><Font name="JetBrains Mono Regular" size="20"/></font>
            </Label>
            <DatePicker fx:id="completionDatePicker"
                        styleClass="input-field"
                        prefHeight="32"
                        GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <!-- Notes -->
            <Label text="Notes:"
                   styleClass="input-label"
                   GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.valignment="TOP">
                <font><Font name="JetBrains Mono Regular" size="20"/></font>
            </Label>
            <TextArea fx:id="notesArea"
                      styleClass="input-field"
                      prefWidth="380" prefHeight="220"
                      GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <!-- Error label -->
            <Label fx:id="errorLabel"
                   textFill="red"
                   visible="false"
                   GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        </GridPane>
    </center>

</BorderPane>
