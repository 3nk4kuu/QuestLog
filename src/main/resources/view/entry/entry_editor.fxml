<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.questlog.ui.EntryEditorController">

    <!-- Top: Back / Save -->
    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Button onAction="#onBackClicked" styleClass="login-button" text="Back">
                <font><Font size="16" /></font>
            </Button>

            <!-- Spacer to push Save to right -->
            <Region HBox.hgrow="ALWAYS" />

            <Button onAction="#onSaveClicked" styleClass="login-button" text="Save">
                <font><Font size="16" /></font>
            </Button>
        </HBox>
    </top>

    <!-- Left: cover + change button + rating hearts -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="505.0" prefWidth="340.0" spacing="20.0">
            <padding><Insets bottom="20" top="20" /></padding>

            <ImageView fx:id="coverImageView" cache="true" fitHeight="320.0" fitWidth="240.0" />

            <Button onAction="#onChangeCoverClicked" styleClass="login-button" text="Change Cover…">
                <font><Font size="16" /></font>
            </Button>

            <HBox alignment="CENTER" spacing="5.0">
                <ToggleButton fx:id="eHeart1" onAction="#onHeartClicked" text="♡">
               <font>
                  <Font size="16.0" />
               </font></ToggleButton>
                <ToggleButton fx:id="eHeart2" onAction="#onHeartClicked" text="♡">
               <font>
                  <Font size="16.0" />
               </font></ToggleButton>
                <ToggleButton fx:id="eHeart3" onAction="#onHeartClicked" text="♡">
               <font>
                  <Font size="16.0" />
               </font></ToggleButton>
                <ToggleButton fx:id="eHeart4" onAction="#onHeartClicked" text="♡">
               <font>
                  <Font size="16.0" />
               </font></ToggleButton>
                <ToggleButton fx:id="eHeart5" onAction="#onHeartClicked" text="♡">
               <font>
                  <Font size="16.0" />
               </font></ToggleButton>
            </HBox>
        </VBox>
    </left>

    <!-- Center: form -->
    <center>
        <GridPane hgap="20" vgap="20.0">
            <padding><Insets right="20.0" top="20.0" /></padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="20.0" />
                <ColumnConstraints percentWidth="75.0" />
            </columnConstraints>

            <Label styleClass="input-label" text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <font>
               <Font size="16.0" />
            </font></Label>
            <TextField fx:id="titleField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <font>
               <Font size="16.0" />
            </font></TextField>

            <Label styleClass="input-label" text="Platform:" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <font>
               <Font size="16.0" />
            </font></Label>
            <ComboBox fx:id="platformCombo" prefHeight="35.0" prefWidth="174.0" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label styleClass="input-label" text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <font>
               <Font size="16.0" />
            </font></Label>
            <ComboBox fx:id="statusCombo" prefHeight="35" prefWidth="174.0" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label styleClass="input-label" text="Started:" GridPane.columnIndex="0" GridPane.rowIndex="3">
            <font>
               <Font size="16.0" />
            </font></Label>
            <DatePicker fx:id="startDatePicker" prefHeight="35" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label styleClass="input-label" text="Completed:" GridPane.columnIndex="0" GridPane.rowIndex="4">
            <font>
               <Font size="16.0" />
            </font></Label>
            <DatePicker fx:id="completionDatePicker" prefHeight="35" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label styleClass="input-label" text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.valignment="TOP">
            <font>
               <Font size="16.0" />
            </font></Label>
            <TextArea fx:id="notesArea" prefHeight="200" prefWidth="400" promptText="Nothing here..." styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <font>
               <Font size="16.0" />
            </font></TextArea>

            <Label fx:id="errorLabel" textFill="red" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="6" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
        </GridPane>
    </center>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" BorderPane.alignment="CENTER">
         <children>

               <!-- NEW: Delete button -->
               <Button fx:id="deleteButton" onAction="#onDeleteClicked" prefHeight="32" prefWidth="80" styleClass="login-button" text="Delete">
                   <font>
                  <Font size="16" />
               </font>
               </Button>
         </children>
         <padding>
            <Insets bottom="20.0" right="20.0" />
         </padding>
      </HBox>
   </bottom>

</BorderPane>
