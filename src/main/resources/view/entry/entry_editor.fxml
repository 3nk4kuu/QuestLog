<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="1024.0" prefWidth="1440.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.utsa.cs3443.questlog.ui.EntryEditorController">

    <!-- Top: Back / Title / Save -->
    <top>
        <HBox alignment="CENTER" spacing="400.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="20.0" right="20.0" top="30.0"/>
            </padding>

            <Button onAction="#onBackClicked"
                    prefHeight="65.0" prefWidth="140.0"
                    styleClass="login-button"
                    text="Back">
                <font>
                    <Font name="JetBrains Mono Medium" size="30"/>
                </font>
            </Button>

            <Label fx:id="headerLabel"
                   styleClass="title-label"
                   text="Create Entry">
                <font>
                    <Font name="JetBrains Mono ExtraBold" size="30.0"/>
                </font>
            </Label>

            <Button onAction="#onSaveClicked"
                    prefHeight="65.0" prefWidth="140.0"
                    styleClass="login-button"
                    text="Save">
                <font>
                    <Font name="JetBrains Mono Medium" size="30"/>
                </font>
            </Button>
        </HBox>
    </top>

    <!-- Left: cover + change button + rating hearts -->
    <left>
        <VBox alignment="TOP_CENTER"
              prefHeight="919.0" prefWidth="563.0"
              spacing="25">
            <padding>
                <Insets bottom="30.0" left="50.0" right="50.0" top="30.0"/>
            </padding>

            <ImageView fx:id="coverImageView"
                       fitHeight="585.0" fitWidth="407.0"
                       preserveRatio="true"/>

            <Button onAction="#onChangeCoverClicked"
                    prefHeight="45" prefWidth="250"
                    styleClass="login-button"
                    text="Change Cover…">
                <font>
                    <Font name="JetBrains Mono Medium" size="30.0"/>
                </font>
            </Button>

            <!-- Hearts directly declared here, hooked to onHeartClicked -->
            <HBox alignment="CENTER" spacing="4">
                <ToggleButton fx:id="eHeart1" text="♡" onAction="#onHeartClicked"/>
                <ToggleButton fx:id="eHeart2" text="♡" onAction="#onHeartClicked"/>
                <ToggleButton fx:id="eHeart3" text="♡" onAction="#onHeartClicked"/>
                <ToggleButton fx:id="eHeart4" text="♡" onAction="#onHeartClicked"/>
                <ToggleButton fx:id="eHeart5" text="♡" onAction="#onHeartClicked"/>
            </HBox>
        </VBox>
    </left>

    <!-- Center: form fields + error label -->
    <center>
        <GridPane hgap="25.0" vgap="30.0" prefWidth="967.0">
            <padding>
                <Insets bottom="30.0" right="40.0" top="60.0"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="25.0"/>
                <ColumnConstraints percentWidth="70.0"/>
            </columnConstraints>

            <!-- Title -->
            <Label styleClass="input-label"
                   text="Title:"
                   GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font>
                    <Font name="JetBrains Mono Regular" size="30.0"/>
                </font>
            </Label>
            <TextField fx:id="titleField"
                       prefHeight="40" prefWidth="300.0"
                       styleClass="input-field"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <!-- Platform -->
            <Label styleClass="input-label"
                   text="Platform:"
                   GridPane.columnIndex="0" GridPane.rowIndex="1">
                <font>
                    <Font name="JetBrains Mono Regular" size="30.0"/>
                </font>
            </Label>
            <ComboBox fx:id="platformCombo"
                      prefHeight="40" prefWidth="600"
                      styleClass="input-field"
                      GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <!-- Status -->
            <Label styleClass="input-label"
                   text="Status:"
                   GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font>
                    <Font name="JetBrains Mono Regular" size="30.0"/>
                </font>
            </Label>
            <ComboBox fx:id="statusCombo"
                      prefHeight="40" prefWidth="600"
                      styleClass="input-field"
                      GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <!-- Started -->
            <Label styleClass="input-label"
                   text="Started:"
                   GridPane.columnIndex="0" GridPane.rowIndex="3">
                <font>
                    <Font name="JetBrains Mono Regular" size="30.0"/>
                </font>
            </Label>
            <DatePicker fx:id="startDatePicker"
                        prefHeight="40" prefWidth="600.0"
                        styleClass="input-field"
                        GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <!-- Completed -->
            <Label styleClass="input-label"
                   text="Completed:"
                   GridPane.columnIndex="0" GridPane.rowIndex="4">
                <font>
                    <Font name="JetBrains Mono Regular" size="30.0"/>
                </font>
            </Label>
            <DatePicker fx:id="completionDatePicker"
                        prefHeight="40" prefWidth="600.0"
                        styleClass="input-field"
                        GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <!-- Notes -->
            <Label styleClass="input-label"
                   text="Notes:"
                   GridPane.columnIndex="0" GridPane.rowIndex="5"
                   GridPane.valignment="TOP">
                <font>
                    <Font name="JetBrains Mono Regular" size="30.0"/>
                </font>
            </Label>
            <TextArea fx:id="notesArea"
                      prefHeight="250" prefWidth="600"
                      styleClass="input-field"
                      GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <!-- Error label -->
            <Label fx:id="errorLabel"
                   text="Error message"
                   textFill="red"
                   visible="false"
                   GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        </GridPane>
    </center>

</BorderPane>
